export module CurrentThread;

import <unistd.h>;
import <sys/syscall.h>;

export namespace CurrentThread
{
    static __thread int t_cachedTid;

    void cacheTid()
    {
        if (t_cachedTid == 0)
        {
            t_cachedTid = static_cast<pid_t>(::syscall(SYS_gettid));
        }
    }

    int tid()
    {
        if (__builtin_expect(t_cachedTid == 0, 0))
        {
            cacheTid();
        }
        return t_cachedTid;
    }
}